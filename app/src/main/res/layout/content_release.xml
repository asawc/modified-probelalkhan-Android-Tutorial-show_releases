<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dip"
        android:paddingStart="10dip"
        android:paddingEnd="10dip">

        <TextView
            android:id="@+id/id_release"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:gravity="start|center_vertical|fill_vertical"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_employee"
            android:layout_width="109dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="62dp"
            android:layout_toEndOf="@+id/id_release"
            android:gravity="start|center_vertical|fill_vertical"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_creation"
            android:layout_width="116dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="62dp"
            android:layout_toEndOf="@+id/id_employee"
            android:gravity="start|center_vertical|fill_vertical"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="89dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/date_creation"
            android:gravity="start|center_vertical|fill_vertical"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>